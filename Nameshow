#include <stdio.h>
#include <string.h>
int main () 
{
	char fname[20],lname[20],fullname[40];
	printf("Enter the first name = ");
	scanf("%s",fname);
	printf("Enter the last name = ");
	scanf("%s",lname);
	int fl=strlen(fname);
    int ll=strlen(lname);
    int i;
	for(i=0;i<fl;i++)
	{
		fullname[i] = fname[i];
	}
	fullname[fl]=' ';
	fl++;
	int c=0;
	for(i=fl;i<(fl+ll);i++)
	{
		fullname[i] = lname[c];
		c++;
	}
	fullname[fl+ll] = '\0';
	printf("Fullname = %s\n",fullname);
	return 0;
}
